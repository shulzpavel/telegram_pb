# =============================================================================
# PLANNING POKER BOT CONFIGURATION
# =============================================================================

# Telegram Bot Configuration
# Получите токен у @BotFather в Telegram
BOT_TOKEN=your_bot_token_here

# =============================================================================
# JIRA INTEGRATION
# =============================================================================

# Jira Configuration
JIRA_BASE_URL=https://media-life.atlassian.net
JIRA_EMAIL=your_email@example.com
JIRA_TOKEN=your_jira_api_token_here

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================

# Main admin (super admin with full access)
HARD_ADMIN=@shults_shults_shults

# =============================================================================
# GROUPS CONFIGURATION
# =============================================================================

# Method 1: JSON Configuration (Recommended for multiple groups)
# Format: [{"chat_id": -1002718440199, "topic_id": 2, "admins": ["@admin1", "@admin2"], "timeout": 90, "scale": ["1", "2", "3", "5", "8", "13"], "is_active": true}]
GROUPS_CONFIG=[{"chat_id": -1002718440199, "topic_id": 2, "admins": ["@admin1", "@admin2"], "timeout": 90, "scale": ["1", "2", "3", "5", "8", "13"], "is_active": true}]

# Method 2: Legacy Configuration (for backward compatibility)
# Use this if you have only one group
ALLOWED_CHAT_ID=-1002718440199
ALLOWED_TOPIC_ID=2
HARD_ADMINS=@admin1,@admin2

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Data directory (where sessions, configs, and logs are stored)
DATA_DIR=data

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Days to keep old sessions before cleanup
CLEANUP_DAYS=7

# Default timeout for voting sessions (seconds)
DEFAULT_TIMEOUT=90

# Default voting scale
DEFAULT_SCALE=1,2,3,5,8,13

