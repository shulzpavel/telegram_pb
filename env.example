# Telegram Bot Configuration
BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN

# User Role Tokens
USER_TOKEN=user_token
LEAD_TOKEN=lead_token
ADMIN_TOKEN=admin_token

# Jira Configuration
JIRA_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your-email@domain.com
JIRA_API_TOKEN=YOUR_JIRA_API_TOKEN
STORY_POINTS_FIELD=customfield_10022

# Optional: Postgres DSN for metrics (used by Grafana dashboards)
# Example: POSTGRES_DSN=postgresql://user:pass@localhost:5432/telegram_pb
POSTGRES_DSN=

# Supported Topics (JSON format)
# Example: {"-1003087077812": ["ALL"]} - allows all topics in chat -1003087077812
SUPPORTED_TOPICS={"-1003087077812": ["ALL"]}

# Microservices Configuration (REQUIRED)
JIRA_SERVICE_URL=http://localhost:8001
VOTING_SERVICE_URL=http://localhost:8002

# Redis Configuration (for Voting Service)
REDIS_URL=redis://localhost:6379/0

# State File Path (used by Voting Service if Redis/Postgres not available)
STATE_FILE=data/state.json
